<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_lightgray"
    android:onClick="onClick" >

    <ImageView
        android:id="@+id/dialogoMensajeCerrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:tint="@color/white"
        app:srcCompat="@drawable/ic_close" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/dialogoMensajeIcon"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:minWidth="60dp"
            app:srcCompat="@drawable/ic_warning" />

        <TextView
            android:id="@+id/dialogoMensajeTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:maxWidth="300dp"
            android:text="Sin resultado"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dialogoMensajeTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:maxWidth="300dp"
            android:text="Asegurate que estÃ©s cerca de la entrada del parking con red Apparkame"
            android:textAlignment="center"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/dialogoMensajeAceptar"
            style="@style/BtnPrimary"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:minWidth="150dp"
            android:text="Aceptar" />

    </LinearLayout >

</FrameLayout >
